<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2EF"
        android:backgroundTint="#F2F2EF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_margin="10dp"
                android:background="@color/basic3"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Area and Perimeter and Area of rectangle "
                android:textColor="#F2F2EF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="384dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:srcCompat="@drawable/image" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#F2F2EF"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:text="Example : if Length = 5 cm and Width = 3 cm , so Area = 3*5 = 15 cm^2 \n Perimeter = (2*5)+(2*3) = 16 cm.  "

                android:textColor="@color/basic2"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_margin="10dp"

                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Let's do quiz ! "
                android:textColor="@color/basic3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/question"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/basic3"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:scrollbars="vertical"
                android:textColor="#F2F2EF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Answer"
                android:inputType="number" />

            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/basic3"
                android:text="Submit" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/basic2"
                android:textSize="40sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/next"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/basic3"
                android:text="another Question"
                app:icon="@android:drawable/ic_menu_rotate" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>